  <body>
<div class="navbar bg-base-300">
  <div class="navbar-start">
  </div>
  <div class="navbar-center  bg-secondary ">
    <h1><a class="btn btn-ghost normal-case text-5xl">HìnH</a></h1>
  </div>
  <div class="navbar-end">
    <div class="flex-none">
      <div class="dropdown dropdown-end">
        <label tabindex="0" class="btn btn-ghost btn-circle">
          <div class="indicator">
            <i class="fa-regular fa-user fa-2xl"></i>
          </div>
        </label>
        <ul tabindex="0" class="menu menu-compact dropdown-content mt-3 p-2 shadow bg-base-100 rounded-box w-52">
          <li>
            <a class="justify-between" href="/profile/<%= user._id%>"> 
              Profile
            </a>
          </li>
          <li><a href="/logout">Logout</a></li>
        </ul>
        </div>
      </div>
  </div>
</div>

<div class="">
  <div class="rowRow ">
    <ul class="row artboard artboard-horizontal phone-6">
      <% for(var i=0; i<posts.length; i++) {%>
        <div class="spicyTwo">
        <li class="spicy">
          <a href="/post/<%= posts[i]._id%>">
            <div class="perImg">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </div>
            <div class="jo">
            <div class="grid h-20 card bg-base-300 rounded-none">
              <h3 class="userNameFont bg-secondary"><a href="/profileTwo/<%= posts[i].user %>"><%= posts[i].userName %></a></h3>
              <span class="captionFont bg-secondary-focus">  <%= posts[i].caption %> </span>
            </div> 
            </div>
          </a>

        </li>
        </div>
      <% } %>
      </ul>
  </div>
</div>  
<%- include('partials/footer') -%>
  </body>

  <script src="https://cdn.tailwindcss.com"></script>
